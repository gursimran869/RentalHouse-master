@model IEnumerable<RentalHouse.Models.CustomerRecord>

@{
    ViewBag.Title = "CustomerRecord";
}

<div class="container bg">
    <div class="row">
        <div class="col-md-12">
            <h2 align="center">Customer Record</h2>
            <hr/>

            <p>
                @Html.ActionLink("Client Booking ", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contact)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HouseNo)
                    </th>
                    <th>Edit</th>
                    <th>Delete </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contact)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HouseNo)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.id })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                        </td>
                    </tr>
                }

            </table>


            <a href="@Url.Action("right","Login")" class="btn btn-success">Back to Menu </a>

        </div>

    </div>

</div>

