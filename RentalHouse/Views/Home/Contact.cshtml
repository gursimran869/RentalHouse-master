
@{
    ViewBag.Title = "Contact";
}


<div class="container bg">
    <div class="row">
        <div class="col-md-12">
            <form method="post" action="sendQuery">
                <div class="form-group">
                    <label>Enter  Name </label>
                    <input type="text" name="QueryName" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Enter Email </label>
                    <input type="email" name="QueryEmail" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Enter Contact </label>
                    <input type="number" name="QueryContact" class="form-control" required />
                </div>


                <div class="form-group">
                    <label>Enter Message </label>
                    <input type="text" name="QueryMsg" class="form-control" required />
                </div>





                <input type="submit" value="Sign In" class="btn btn-danger" />

            </form>

        </div>

    </div>

</div>

